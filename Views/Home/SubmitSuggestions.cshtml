
@{
    ViewBag.Title = "Submit a Suggestion";
}

@model Assignment4.Models.RestaurantSuggestion

<!DOCTYPE html>
<html>
<head>
    <title>Submit a Restuarant suggestion</title>
    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <header>
        <h4>@ViewBag.Title</h4>
    </header>
    <div class="container">
        <form asp-action="SubmitSuggestions" method="post">
        <div class="form-group">
            <label asp-for="SuggestorName">Your Name:</label>
            <input asp-for="SuggestorName"  class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="RestaurantName">Restaurant Name:</label>
            <input asp-for="RestaurantName"  class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="FavoriteDish">Favorite Dish:</label>
            <input asp-for="FavoriteDish"  class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="RestaurantPhone">Restaurant Phone:</label>
            <!--Validation for Phone Number-->
            <input asp-for="RestaurantPhone"  class="form-control" type="tel" id="phone" name="phone" placeholder="123-456-7890" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" />
        </div>
        <button type="submit">Submit Your Application</button>
        </form>
    </div>
    

</body>
</html>
